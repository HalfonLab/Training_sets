#!/bin/sh
#SBATCH --partition=general-compute
#SBATCH --time=72:00:00
#SBATCH --nodes=1
#SBATCH --ntasks=1
#SBATCH --output="tcas.03232017.out"
#SBATCH --mail-user=mshalfon@buffalo.edu
#SBATCH --mail-type=ALL


module load bioperl/1.6.1
module load perl/5.20.2
ulimit -s unlimited


echo "SLURM_JOB_ID="$SLURM_JOB_ID
echo "SLURM_JOB_NODELIST"=$SLURM_JOB_NODELIST
echo "SLURM_NNODES"=$SLURM_NNODES
echo "SLURM_NPROCS"=$SLURM_NPROCS
echo "SLURMTMPDIR="$SLURMTMPDIR
echo "SLURM_SUBMIT_DIR="$SLURM_SUBMIT_DIR


EXE="perl ../SCRMshaw/code/scrm.pl"
ARGS="--thitg 1000  --genome /projects/academic/mshalfon/Tribolium_genome/GCF_000002335.3_Tcas5.2_genomic_RefSeqIDs.fna.2.7.7.80.10.50.500.mask --gff /projects/academic/mshalfon/Tribolium_genome/GCA_000002335.3_Tcas5.2_genomic_RefSeqIDs.gff --traindirlst ../CRM.train/msh_Tcas_03222017.lst --imm --outdir ./Tcas_03232017 --step 123"


OUTFILE=outfile.tcas.03232017.imm

module list
ulimit -s unlimited



$EXE $ARGS > $OUTFILE 2>&1

echo "All Done!"

